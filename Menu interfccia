import QtQuick 2.15
import QtQuick.Controls 2.15

ApplicationWindow {
    visible: true
    width: 600
    height: 400
    title: "Simulazione Canale Estuario"

    // Inizialmente mostriamo la finestra di benvenuto
    Rectangle {
        id: welcomeWindow
        width: parent.width
        height: parent.height
        color: "#f0f0f0"  // Colore di sfondo della schermata iniziale

        // Layout per la finestra di benvenuto
        Column {
            anchors.centerIn: parent
            spacing: 20

            Text {
                text: "Benvenuto alla Simulazione"
                font.pointSize: 24
                horizontalAlignment: Text.AlignHCenter
            }

            // Pulsante per "Continuare"
            Button {
                text: "Continuare"
                width: 200
                onClicked: {
                    // Nascondi la schermata iniziale e mostra quella della simulazione
                    welcomeWindow.visible = false
                    simulationWindow.visible = true
                }
            }

            // Pulsante per "Uscire"
            Button {
                text: "Uscire"
                width: 200
                onClicked: {
                    Qt.quit()  // Chiudi l'applicazione
                }
            }
        }
    }

    // Finestra della simulazione, nascosta all'inizio
    Rectangle {
        id: simulationWindow
        width: parent.width
        height: parent.height
        visible: false  // La finestra della simulazione Ã¨ nascosta inizialmente
        color: "#ffffff"  // Colore di sfondo della finestra della simulazione

        // Layout per la simulazione
        Column {
            anchors.centerIn: parent
            spacing: 20

            Text {
                text: "Configurazione della Simulazione"
                font.pointSize: 24
                horizontalAlignment: Text.AlignHCenter
            }

            // Sezione per il "Numero Courant"
            Row {
                spacing: 10
                Text { text: "Numero Courant:" }
                Slider {
                    id: courantSlider
                    from: 0
                    to: 1
                    value: 0.1
                    onValueChanged: console.log("Numero Courant:", value)
                }
                Text {
                    text: Math.round(courantSlider.value * 100) + "%"
                }
            }

            // Pulsante per avviare la simulazione
            Button {
                text: "Avvia Simulazione"
                width: 200
                onClicked: {
                    console.log("Simulazione avviata con i seguenti parametri:")
                    console.log("Numero Courant:", courantSlider.value)
                }
            }

            // Pulsante per tornare alla schermata iniziale
            Button {
                text: "Torna alla Schermata Iniziale"
                width: 200
                onClicked: {
                    // Nascondi la schermata di simulazione e mostra quella di benvenuto
                    simulationWindow.visible = false
                    welcomeWindow.visible = true
                }
            }
        }
    }
}



import QtQuick 2.15
import QtQuick.Controls 2.15

ApplicationWindow {
    visible: true
    width: 600
    height: 400
    title: "Simulazione Canale Estuario"

    // StackView per gestire il passaggio tra schermate
    StackView {
        id: stackView
        anchors.fill: parent
        initialItem: initialScreen // Impostiamo la schermata iniziale

        // Definiamo la schermata iniziale
        Component {
            id: initialScreen
            Item {
                width: parent.width
                height: parent.height

                Rectangle {
                    width: parent.width
                    height: parent.height
                    color: "lightblue"

                    // Contenuto della schermata iniziale
                    Column {
                        anchors.centerIn: parent
                        spacing: 20

                        Text {
                            text: "Benvenuto alla Simulazione"
                            font.pointSize: 20
                            horizontalAlignment: Text.AlignHCenter
                        }

                        Row {
                            spacing: 20
                            Button {
                                text: "Avvia Simulazione"
                                onClicked: {
                                    stackView.push(simulationScreen) // Passiamo alla schermata della simulazione
                                }
                            }

                            Button {
                                text: "Esci"
                                onClicked: {
                                    Qt.quit()
                                }
                            }
                        }
                    }
                }
            }
        }

        // Definiamo la schermata della simulazione
        Component {
            id: simulationScreen
            Item {
                width: parent.width
                height: parent.height

                Rectangle {
                    width: parent.width
                    height: parent.height
                    color: "lightgreen"

                    // Contenuto della schermata della simulazione
                    Column {
                        anchors.centerIn: parent
                        spacing: 20

                        Text {
                            text: "Simulazione Canale Estuario"
                            font.pointSize: 20
                            horizontalAlignment: Text.AlignHCenter
                        }

                        Row {
                            spacing: 20
                            Button {
                                text: "Avvia Simulazione"
                                onClicked: {
                                    console.log("Simulazione avviata.")
                                    // Qui puoi aggiungere la logica per avviare la simulazione
                                }
                            }

                            Button {
                                text: "Torna alla schermata iniziale"
                                onClicked: {
                                    stackView.pop() // Torna alla schermata iniziale
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
