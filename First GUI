import QtQuick
import PrimaProva
import QtQuick.Controls

Window {
    width: mainScreen.width
    height: mainScreen.height

    visible: true
    title: "Prima Interfaccia"

    Screen01 {
        id: mainScreen
    }
    Button {
        id: myButton
        text: "Clicca"
        anchors.centerIn: parent

        background: Rectangle {
            id: buttonBackground
            radius: 10
            color: "grey"
            Behavior on color {

                ColorAnimation {
                    duration: 500
                }
            }
        }

        onClicked: {
            myButton.text = "Premuto!"
            buttonBackground.color = "red"
            mainScreen.color = "purple"
        }
    }
}
